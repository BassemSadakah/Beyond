<style media="screen">
  .lesson_main {
    background: white;
    margin-top: 20px;
    padding: 0px;
    border-radius: 10px;
    width: 750px;
    max-width: 90%;
    box-shadow:0 0 15px rgba(0,0,0,0.2);
  }

  h4 {
    padding-top: 10px;
    padding-bottom: 5px;
    font-family: righteous;
    //color: #4a535c;
    text-align: center;
  }

  li {
    list-style: none;
  }


  .l_item {
    padding-right: 20px;
    display: flex;
    flex-direction: row;
    padding-left:10px;
    //border-bottom:1px solid gray;
  }

  .i_head {
    width: 100%;
    padding-top: 10px;
    padding-left: 5px;
    padding-bottom: 3px;
    font-family: righteous;
    //    border-left: 1px solid rgba(0, 0, 0, 0.1);
  }

  .fa-play-circle {
    align-self:center;
    padding: 10px;
    padding-right: 10px;
