    transition:transform 400ms ease-in,color 400ms ease-in;

  }

  hr {
    margin: 0px;
  }

  h3 {
    font-size: 14px;
    color: gray;
  }

  .hr_main {
    border-top-color: rgba(0, 0, 0, 0.2);
  }

  .hr_sub {
    padding: 3px;
  }
  .head_s{
    color:#31363c;
  }
  .fa-play-circle:hover{
    transform:rotate(0.34turn) scale(1.1);
    color:green;
  }

  .l_item:hover {
    cursor: pointer;
    background-color: rgba(0, 0, 0, 0.05);

  }

  .head_s:hover {
    text-decoration: underline;
  }
</style>
