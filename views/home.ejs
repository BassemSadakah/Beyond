<style>
    body {
        background: white !important;
    }

    #head_new {
      display: inline-block;
        width: 100%;
        height:300px;
        /* background: rgb(254, 242, 0); */
        /* background: radial-gradient(circle, rgba(254, 242, 0, 1) 0%, rgba(255, 133, 0, 1) 63%); */
    }
    .cover{
      overflow:hidden;
      width:100%;
      height:300px;
      object-fit: contain;

    }

    .head_logo {
        width: 400px;
        margin-left: 30px;
    }

    .head_line {
        height: 300px;
        margin: 40px 40px 40px 90px;
    }

    .head_seekers {
        width: 400px;
    }

    @media(max-width:1000px) {
        .head_line {
            visibility: hidden;
            height: 0;
            margin: 0;
        }

        .head_logo {
            display: block;
            margin: auto;
            padding-top: 100px;
        }

        .head_seekers {
            display: block;
            margin-left: 60px;

        }

    }

    @media(max-width:470px) {
        .head_line {
            visibility: hidden;
            height: 0;
            margin: 0;
        }

        .head_logo {
            width: 95%;
            display: block;
            margin: auto;
            padding-top: 100px;
        }

        .head_seekers {
            width: 95%;
            display: block;
            margin-left: 20px;

        }

    }
</style>
