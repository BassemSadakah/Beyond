
<style media="screen">
  .horz_margin{
    margin:4px 0px;
  }
  body {
  background: #0c002b;
  padding: 0;
  margin: 0;
  font-family: sans-serif;
}

a {
  position: absolute;
/*   display: inline-block; */
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  padding: 30px 60px;
  font-size: 30px;
  line-height: 30px;
  letter-spacing: 2px;
  color: #1670f0;
  text-transform: uppercase;
  text-decoration: none;
  box-shadow: 0 20px 50px rgba(0,0,0,.5);
  overflow: hidden;
}

a:before {
  content: '';
  position: absolute;
  top: 2px;
  left: 2px;
  bottom: 2px;
  width: 50%;
  background: rgba(255,255,255,0.05);
}
div span:nth-child(1){
  position: absolute;
  display: inline-block;
  width: 100%;
  height: 2px;
  top: 0;
  left: 0;
  background: linear-gradient(to right, #0c002b, #1670f0);
  animation: animation1 2s linear infinite;
  animation-delay: 1s;
}

div span:nth-child(2){
  position: absolute;
  display: inline-block;
  width: 2px;
  height: 100%;
  top: 0;
  right: 0;
  background: linear-gradient(to bottom, #0c002b, #1670f0);
  animation: animation2 2s linear infinite;
}

div span:nth-child(3){
  position: absolute;
  display: inline-block;
  width: 100%;
  height: 2px;
  bottom: 0;
  left: 0;
  background: linear-gradient(to left, #0c002b, #1670f0);
  animation: animation3 2s linear infinite;
  animation-delay: 1s;
}

div span:nth-child(4){
  position: absolute;
  display: inline-block;
  width: 2px;
  height: 100%;
  top: 0;
  left: 0;
  background: linear-gradient(to top, #0c002b, #1670f0);
  animation: animation4 2s linear infinite;
}

@keyframes animation1{
  0%{
    left: -100%;
  }
  100%{
    left: 100%
  }
}

@keyframes animation2{
  0%{
    top: -100%;
  }
  100%{
    top: 100%
  }
}

@keyframes animation3{
  0%{
    left: 100%;
  }
  100%{
    left: -100%
  }
}

@keyframes animation4{
  0%{
    top: 100%;
  }
  100%{
    top: -100%
  }
}
</style>
